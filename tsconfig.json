{
    "extends": "@tsconfig/node16-strictest/tsconfig.json",
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "outDir": "lib",
      "rootDir": "src",
      "types": ["node"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict":true
    },
    "include":["src"]
  }